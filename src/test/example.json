{
  "apiVersion": "enonic.cloud/v1alpha1",
  "spec": {
    "cloud": "mycloud",
    "project": "myproject",
    "name": "myname",
    "xpVersion": "7.1.0",
    "enabled": true,
    "nodes": [
      {
        "alias": "woop",
        "replicas": 1,
        "type": "STANDALONE",
        "resources": {
          "cpu": "1",
          "memory": "1Gi",
          "disks": {
            "repo": "1Gi",
            "snapshots": "1Gi"
          }
        },
        "env": {
          "JAVA_OPTS": "-Dcom.sun.management.jmxremote\n-Dcom.sun.management.jmxremote.port=3000\n-Dcom.sun.management.jmxremote.rmi.port=3001\n-Dcom.sun.management.jmxremote.ssl=false\n-Dcom.sun.management.jmxremote.authenticate=false\n-Djava.rmi.server.hostname=127.0.0.1\n-Xdebug\n-Xnoagent\n-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005\n",
          "XP_APPS": "com.enonic.app.snapshotter:2.1.1\n"
        },
        "config": {
          "com.enonic.xp.app.main.cfg": "tourDisabled = true\n",
          "com.enonic.xp.web.vhost.cfg": "mapping.admin.host = company.com\nmapping.admin.source = /admin\nmapping.admin.target = /admin\nmapping.admin.idProvider.system = default\n",
          "system.properties": "xp.suPassword = {sha512}5b722b307fce6c944905d132691d5e4a2214b7fe92b738920eb3fce3a90420a19511c3010a0e7712b054daef5b57bad59ecbd93b3280f210578f547f4aed4d25\nxp.init.adminUserCreation = false"
        }
      }
    ],
    "vHostCertificates": {
      "company.com": {
        "selfSigned": true
      }
    }
  }
}

